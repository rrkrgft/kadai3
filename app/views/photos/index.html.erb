<h1>一覧</h1>

<div class="mb-3">
  <table class="table table-hover">
    <tr>
      <th>写真</th>
      <th>テキスト</th>
      <th>投稿者</th>
    </tr>
    <% @photos.each do |p| %>
    <tr>
      <th><%= image_tag(p.image.url) %></th>
      <th><%= p.text %></th>
      <th><%= p.user.name %></th>
    </tr>
    <% end %>
  </table>
</div>
<%= link_to "新規登録", new_photo_path , class: "btn btn-primary" %>

