<h1>詳細確認</h1>

<table class="table table-hover">
  <tbody>
    <tr>
      <th>画像</th>
      <td><%= image_tag(@photo.image.url) %>
    </tr>
    <tr>
      <th>テキスト</th>
      <td><%= @photo.text %>
    </tr>
    <tr>
      <th>投稿日時</th>
      <td><%= @photo.created_at %>
    </tr>
    <tr>
      <th>更新日時</th>
      <td><%= @photo.updated_at %>
    </tr>
    <tr>
      <th>投稿者</th>
      <td><%= @photo.user.name %>
    </tr>
  </tbody>
</table>
<% if !Favorite.exists?(user: current_user, photo_id: @photo.id) %>
  <%= link_to "いいね",photo_favorites_path(@photo), method: :post, class: "btn btn-primary" %>
<% else %>
  <%= link_to "いいね解除",photo_favorites_path(@photo), method: :delete, class: "btn btn-danger" %>
<% end %>

<% if current_user.id == @photo.user.id %>
  <%= link_to "編集", edit_photo_path(@photo.id), class: "btn btn-secondary" %>
  <%= link_to "削除", photo_path(@photo.id), method: :delete ,data: { confirm: '本当に削除していいですか'}, class: "btn btn-danger mx-3" %>
<% end %>

