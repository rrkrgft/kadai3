<h1>画像の登録</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <div class="field">
    <%= f.label :image %>
    <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
    <%= f.file_field :image , class: "mt-5"%>
    <%= f.hidden_field :image_cache %>
    <div class="mt-4">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="mt-4">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "btn btn-primary mt-4" %>
  </div>
  <%= link_to "戻る", user_path(@user.id), class: "btn btn-secondary mt-4" %>
<% end %>